{
    "display_information": {
        "name": "Identity Verification Bot",
        "description": "Verify the identify of employees you are communicating with.",
        "background_color": "#000000"
    },
    "features": {
        "bot_user": {
            "display_name": "Identity Verification Bot",
            "always_online": false
        },
        "slash_commands": [
            {
                "command": "/verify-user",
                "description": "Verify the identity of a user",
                "usage_hint": "@user",
                "should_escape": true
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write",
                "commands",
                "im:write",
                "mpim:write",
                "users:read.email",
                "users:read"
            ]
        }
    },
    "settings": {
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}